{
  "name": "shorter",
  "version": "0.0.1",
  "description": "Open-source url shortener",
  "main": "index.js",
  "scripts": {
    "test": "jest uspec",
    "lint-check": "tslint -c tslint.json 'src/**/*.ts'",
    "style-check": "prettier 'src/**/*.ts' --list-different",
    "check": "npm run lint-check && npm run style-check",
    "lint-fix": "tslint -c tslint.json 'src/**/*.ts' --fix",
    "style-fix": "prettier 'src/**/*.ts' --write",
    "fix": "npm run lint-fix && npm run style-fix",
    "pre-push": "npm run check && npm run test",
    "tsoa": "tsoa routes && tsoa swagger",
    "dev": "nodemon --config nodemon.json",
    "deploy": "npm run pre-push && npm run tsoa-staging && sls deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/cameronlund4/shorter.git"
  },
  "author": "Cameron Lund",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/cameronlund4/shorter/issues"
  },
  "homepage": "https://github.com/cameronlund4/shorter#readme",
  "dependencies": {
    "@koa/cors": "^3.4.1",
    "@koa/router": "^12.0.0",
    "@types/koa-router": "^7.4.4",
    "async-lock": "^1.3.2",
    "dotenv": "^16.0.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-json": "^2.0.2",
    "koa-logger": "^3.2.1",
    "koa-mount": "^4.0.0",
    "koa-router": "^12.0.0",
    "koa-static": "^5.0.0",
    "koa2-swagger-ui": "^5.6.0",
    "lodash": "^4.17.21",
    "mongodb": "^4.8.0",
    "multer": "^1.4.5-lts.1",
    "serverless-http": "^3.0.2",
    "ts-node": "^10.9.1",
    "tslint": "^6.1.3",
    "tsoa": "^4.1.1"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.18.6",
    "@babel/plugin-proposal-object-rest-spread": "^7.18.9",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.6",
    "@types/koa": "^2.13.5",
    "@types/node": "^18.0.6",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "nodemon": "^2.0.19",
    "openapi-typescript-codegen": "^0.23.0",
    "prettier": "2.7.1",
    "serverless": "^3.22.0",
    "serverless-plugin-typescript": "^2.1.2",
    "serverless-webpack": "^5.9.0",
    "ts-jest": "^28.0.7",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.7.4"
  }
}
